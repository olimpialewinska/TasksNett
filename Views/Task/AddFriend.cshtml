
@{
    ViewData["Title"] = "Dodaj osobe";
}

<div class="container">
    @if (TempData["Message"] != null)
    {
        <div class='alert alert-@TempData["Status"]'>
            <div class="row justify-content-center">
                @TempData["Message"]
            </div>
        </div>
    }
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card text-center">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link" href="/Task">
                                <p class="dtext">Twoje zadania</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Task/AddTask">
                                <p class="dtext">Dodaj zadanie</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Task/AssignedTask">
                                <p class="dtext">Zlecone zadania</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Task/Friends">
                                <p class="dtext">Osoby</p>
                            </a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link active" href="/Task/AddFriend">
                                <p class="dtext">Dodaj osobe</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Task/History">
                                <p class="dtext">Historia</p>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                   <h3 style="padding:20px"> Dodaj osobe</h3>
                    <p>Aby dodać osobe musisz znać jej email.</p>
                    <div class="row justify-content-center">
                        <div class="col-md-7">
                            @model Tasks.Models.Friend
                            <form asp-action="AddFriendData" method="post"> 
                            <div class="input-group mb-3">
                                <span class="input-group-text">Email:</span>
                                <input asp-for="User2" class="form-control" type="email" required/>
                            </div>
                            <button type="submit" class="btn btn-primary me-md-2">Dodaj</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
